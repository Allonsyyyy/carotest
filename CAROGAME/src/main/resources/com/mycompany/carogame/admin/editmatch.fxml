<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<DialogPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.mycompany.carogame.admin.EditMatchController">
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            
            <Label text="Match ID:" GridPane.rowIndex="0" />
            <TextField fx:id="matchIdField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Player 1 ID:" GridPane.rowIndex="1" />
            <TextField fx:id="player1IdField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Player 2 ID:" GridPane.rowIndex="2" />
            <TextField fx:id="player2IdField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Start Time:" GridPane.rowIndex="3" />
            <TextField fx:id="startTimeField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="End Time:" GridPane.rowIndex="4" />
            <TextField fx:id="endTimeField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Winner ID:" GridPane.rowIndex="5" />
            <TextField fx:id="winnerIdField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
        </GridPane>
    </content>
</DialogPane>
